<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="SD.Controls.Themes.ControlThemes">
	<Design.PreviewWith>
		<Border Padding="20">
			<!-- Add Controls for Previewer Here -->
		</Border>
	</Design.PreviewWith>

	<StyleInclude Source="avares://IconPacks.Avalonia/Icons.axaml" />

	<Styles.Resources>
		<ResourceDictionary>
			<SolidColorBrush x:Key="MonthItemEmptyBrush" Color="White"></SolidColorBrush>
			<SolidColorBrush x:Key="MonthItemHalfBrush" Color="LightBlue"></SolidColorBrush>
			<SolidColorBrush x:Key="MonthItemFullBrush" Color="#6296ab"></SolidColorBrush>

			<SolidColorBrush x:Key="RedBrush" Color="#ff0000"></SolidColorBrush>

			<ResourceDictionary.MergedDictionaries>
				<MergeResourceInclude Source="/Themes/Controls/ToolBar.axaml"/>
				<MergeResourceInclude Source="/Themes/Controls/MonthSelection.axaml"/>
				<MergeResourceInclude Source="/Themes/Controls/MonthCalendar.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Styles.Resources>
</Styles>
